import java.util.Scanner;

public class SumNaturalNo {

	public static void main(String args[])
	{
		Scanner s = new Scanner(System.in);
		System.out.println("Enter No :");
		int n = s.nextInt();
		
		int sum = 0;
		for(int i=1; i<=n; i++)
		{
			sum += i;
		}
		
		System.out.println("Sum of "+n+" natural numbers is "+sum);
	}
}
